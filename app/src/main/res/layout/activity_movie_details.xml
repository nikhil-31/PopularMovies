<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/batty"
            android:scaleType="centerCrop"
            android:alpha="0.2"
            android:id="@+id/backdrop"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:id="@+id/relative">
            <ImageView
                android:layout_width="138dp"
                android:layout_height="200dp"
                android:id="@+id/poster_details"

                android:src="@drawable/interstellar"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Release Date"
                android:layout_toRightOf="@+id/poster_details"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:paddingTop="50dp"
                android:id="@+id/Release_text"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="31-2-2224"
                android:layout_below="@+id/Release_text"
                android:layout_toRightOf="@+id/poster_details"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:textSize="20sp"
                android:id="@+id/Release_write"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating"
                android:layout_below="@+id/Release_write"
                android:layout_toRightOf="@+id/poster_details"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:textSize="20sp"
                android:id="@+id/Rating_text"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Rating_text"
                android:layout_toRightOf="@+id/poster_details"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:textSize="20sp"
                android:text="8.2/10"
                android:id="@+id/Rating_write"
                android:textColor="#000000"/>


        </RelativeLayout>
        <TextView
            android:paddingLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="30sp"
            android:paddingTop="10dp"
            android:id="@+id/Title_write"
            android:layout_below="@id/relative"
            android:textColor="#000000"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Title_write"
            android:paddingBottom="16dp"
            android:paddingRight="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Overview_write"
            android:textSize="15sp"
            android:paddingTop="5dp"
            android:text="the overview here"
            android:layout_below="@+id/Title_write"
            android:paddingLeft="16dp"
            android:textColor="#000000"
            />
        </ScrollView>
    </RelativeLayout>
</ScrollView>

